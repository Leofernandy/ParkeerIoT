<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddVehicleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="319dp"
            android:layout_height="27dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvLeftArrow"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/leftarrow"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="-4dp"
                android:text="Add Vehicle"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            android:layout_width="369dp"
            android:layout_height="389dp"
            android:paddingBottom="19dp"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtPlate"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="319dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/rounded_edt"
                    android:ems="10"
                    android:hint="BK 1234 ABC"
                    android:inputType="text"
                    android:paddingHorizontal="25dp"
                    android:textSize="15dp"/>

                <Spinner
                    android:id="@+id/sprBrand"
                    android:layout_width="319dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/rounded_edt"
                    android:paddingHorizontal="15dp"/>

                <Spinner
                    android:id="@+id/sprModel"
                    android:layout_width="319dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/rounded_edt"
                    android:paddingHorizontal="15dp"/>

                <Spinner
                    android:id="@+id/sprYear"
                    android:layout_width="319dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/rounded_edt"
                    android:paddingHorizontal="15dp"/>

                <Spinner
                    android:id="@+id/sprColor"
                    android:layout_width="319dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/rounded_edt"
                    android:paddingHorizontal="15dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnAddVehicle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="369dp"
            android:layout_height="55dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_edt"
            android:text="ADD VEHICLE">
        </Button>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>