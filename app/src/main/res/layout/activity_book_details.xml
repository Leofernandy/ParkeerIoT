<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="319dp"
            android:layout_height="27dp"
            android:layout_marginTop="22dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvLeftArrow"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/leftarrow"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_marginLeft="53dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Booking Details" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            android:layout_width="369dp"
            android:layout_height="583dp"
            android:layout_marginTop="15dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/qrCode"
                        android:layout_width="104dp"
                        android:layout_height="104dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/qr_book"
                        android:layout_gravity="center_horizontal"></ImageView>
                    <Button
                        android:id="@+id/btnDownloadQR"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="99dp"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:textSize="8sp"
                        android:background="@drawable/rounded_kecil"
                        android:textColor="@color/white"
                        android:text="DOWNLOAD QR"></Button>
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:layout_marginRight="1dp"
                        android:background="@color/navy"
                        android:text="Booking ID"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                    <TextView
                        android:id="@+id/textViewBookingId"
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:background="#F5F5F5"
                        android:layout_gravity="right"
                        android:text="BK68110B1C13F98"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:layout_marginRight="1dp"
                        android:background="@color/navy"
                        android:text="Location"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                    <TextView
                        android:id="@+id/textViewMallName"
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:background="#F5F5F5"
                        android:layout_gravity="right"
                        android:text="Delipark Mall"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:layout_marginRight="1dp"
                        android:background="@color/navy"
                        android:text="Parking Slot"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                    <TextView
                        android:id="@+id/textViewSlot"
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:background="#F5F5F5"
                        android:layout_gravity="right"
                        android:text="A-01"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:layout_marginRight="1dp"
                        android:background="@color/navy"
                        android:text="Vehicles Plate"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                    <TextView
                        android:id="@+id/textViewPlate"
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:background="#F5F5F5"
                        android:layout_gravity="right"
                        android:text="BK 1234 ABC"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:layout_marginRight="1dp"
                        android:background="@color/navy"
                        android:text="Arrive After"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                    <TextView
                        android:id="@+id/textViewMasuk"
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:background="#F5F5F5"
                        android:layout_gravity="right"
                        android:text="Monday, 30 June 17.30"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:layout_marginRight="1dp"
                        android:background="@color/navy"
                        android:text="Exit Before"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                    <TextView
                        android:id="@+id/textViewKeluar"
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:background="#F5F5F5"
                        android:layout_gravity="right"
                        android:text="Monday, 30 June 21.30"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:layout_marginRight="1dp"
                        android:background="@color/navy"
                        android:text="Duration"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                    <TextView
                        android:id="@+id/textViewDurasi"
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:background="#F5F5F5"
                        android:layout_gravity="right"
                        android:text="04 hours 00 minutes"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:layout_marginRight="1dp"
                        android:background="@color/navy"
                        android:text="Total"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                    <TextView
                        android:id="@+id/textViewHarga"
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:background="#F5F5F5"
                        android:layout_gravity="right"
                        android:text="IDR 20.000"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:layout_marginRight="1dp"
                        android:background="@color/navy"
                        android:text="Payment Method"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                    <TextView
                        android:layout_width="184dp"
                        android:layout_height="39dp"
                        android:background="#F5F5F5"
                        android:layout_gravity="right"
                        android:text="DANA"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:textSize="13dp"></TextView>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="17dp"
                android:layout_height="39dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnCancel"

                    android:layout_width="148dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:background="@drawable/rounded_kecil_merah"
                    android:textColor="@color/white"
                    android:text="CANCEL"></TextView>

                <TextView
                    android:id="@+id/btnDownloadReceipt"
                    android:layout_width="148dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="37dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:background="@drawable/rounded_kecil_navy"
                    android:textColor="@color/white"
                    android:text="DOWNLOAD RECEIPT"></TextView>

            </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>