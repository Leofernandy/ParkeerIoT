<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="409dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:paddingTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imvLogo"
            android:layout_width="72.25dp"
            android:layout_height="86dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/txvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="27dp"
            android:text="Welcome to Parkeer!" />

        <TextView
            android:id="@+id/txvSlogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Save Time, Park Faster" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="319dp"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            android:paddingHorizontal="25dp"
            android:background="@drawable/rounded_edt"
            android:ems="10"
            android:textSize="13dp"
            android:inputType="textEmailAddress"
            android:hint="Email Address"
            />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="319dp"
            android:layout_height="55dp"
            android:paddingHorizontal="25dp"
            android:background="@drawable/rounded_edt"
            android:ems="10"
            android:textSize="13dp"
            android:inputType="textPassword"
            android:layout_marginTop="19dp"
            android:hint="Password"
            />

        <LinearLayout
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbxKeepMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/navy"
                android:buttonTint="@color/navy"
                android:textSize="13dp"
                android:text="Keep me logged in" />

            <TextView
                android:id="@+id/txvForgotPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:textSize="13dp"
                android:gravity="right"
                android:textColor="@color/navy"
                android:layout_weight="1"
                android:text="Forgot Password?" />
        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="319dp"
            android:layout_height="55dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_edt"
            android:text="LOGIN" />

        <LinearLayout
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txvDontHaveAcc"
                android:layout_width="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_height="wrap_content"
                android:textColor="@color/greytua"
                android:textSize="13dp"
                android:text="Don't have an account?" />

            <TextView
                android:id="@+id/txvLinkSignUp"
                android:layout_width="wrap_content"
                android:layout_marginVertical="15dp"
                android:textSize="13dp"
                android:layout_height="wrap_content"
                android:textColor="@color/navy"
                android:text=" Sign Up" />

        </LinearLayout>



        <TextView
            android:id="@+id/textView5"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:gravity="center"
            android:textColor="@color/greytua"
            android:text="──────────── or continue with ────────────" />

        <LinearLayout
            android:layout_width="319dp"
            android:layout_height="55dp"
            android:layout_marginVertical="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="67dp"
                android:layout_height="55dp"
                android:orientation="vertical"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_edt">
                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/google"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="67dp"
                android:layout_height="55dp"
                android:orientation="vertical"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_edt">
                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/fb"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="67dp"
                android:layout_height="55dp"
                android:orientation="vertical"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_edt">

                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/apple"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="67dp"
                android:layout_height="55dp"
                android:orientation="vertical"
                android:layout_marginEnd="17dp"
                android:background="@drawable/rounded_edt">
                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/twitter"></ImageView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>