<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="889dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="45dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">


        <LinearLayout
            android:layout_width="319dp"
            android:layout_height="23dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvLeftArrow"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/leftarrow"></ImageView>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="23dp"
                android:layout_marginLeft="128dp"
                app:srcCompat="@drawable/logo" />

        </LinearLayout>


        <TextView
            android:id="@+id/txvSignup"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingTop="45dp"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvCreate"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Create your account in seconds" />

        <EditText
            android:id="@+id/edtFullname"
            android:layout_width="319dp"
            android:layout_height="55dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/rounded_edt"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="text"
            android:paddingHorizontal="25dp"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="319dp"
            android:layout_height="55dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/rounded_edt"
            android:ems="10"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="25dp"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="319dp"
            android:layout_height="55dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/rounded_edt"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="phone"
            android:paddingHorizontal="25dp"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="319dp"
            android:layout_height="55dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/rounded_edt"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingHorizontal="25dp"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbxTnC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:buttonTint="@color/navy"
                android:text="I agree to the"
                android:textColor="@color/navy"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/txvForgotPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="0"
                android:gravity="right"
                android:text=" Terms of Service and Privacy Policy"
                android:textColor="@color/navy"
                android:textSize="13dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="319dp"
            android:layout_height="55dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_edt"
            android:text="SIGN UP" />

        <LinearLayout
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txvAlrAMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="Already a member?"
                android:textColor="@color/greytua"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/txvLinkLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text=" Log in"
                android:textColor="@color/navy"
                android:textSize="13dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="──────────── or continue with ────────────"
            android:textColor="@color/greytua"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="319dp"
            android:layout_height="55dp"
            android:layout_marginVertical="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="67dp"
                android:layout_height="55dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_edt"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/google"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="67dp"
                android:layout_height="55dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_edt"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/fb"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="67dp"
                android:layout_height="55dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_edt"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/apple"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="67dp"
                android:layout_height="55dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/rounded_edt"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/twitter"></ImageView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>