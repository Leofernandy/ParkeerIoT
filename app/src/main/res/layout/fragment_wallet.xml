<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WalletFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="18dp"
            android:text="Wallet" />

        <androidx.cardview.widget.CardView
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Default Payment Method"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="@color/black"></TextView>

                    <ImageView
                        android:id="@+id/imvTopup"
                        android:layout_width="19dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="170dp"
                        android:src="@drawable/threedots"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imvDana"
                        android:layout_width="76dp"
                        android:layout_height="24dp"
                        android:src="@drawable/dana"/>

                    <TextView
                        android:id="@+id/txvSaldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginLeft="178dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:text="IDR 123.456"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:text="62******7890"/>
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:text="E-Wallets"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="4dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ovo"/>

                <TextView
                    android:id="@+id/txvPhone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textSize="11dp"
                    android:text="62******7890"/>
            </LinearLayout>


            <Space
                android:layout_width="205dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:textSize="12sp"
                android:text="IDR 123.456"/>


            <ImageView
                android:layout_width="19dp"
                android:layout_height="5dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/threedots"
                android:rotation="90"/>

        </LinearLayout>
        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="#CCCCCC" />

        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            
            <ImageView
                android:layout_width="75dp"
                android:layout_height="29dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/gopay"/>
            <Space
                android:layout_width="237dp"
                android:layout_height="50dp"/>
            <ImageView
                android:layout_width="44dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/buttonlink"/>

        </LinearLayout>
        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="#CCCCCC" />

        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/shopeepay"/>
            <Space
                android:layout_width="267dp"
                android:layout_height="50dp"/>
            <ImageView
                android:layout_width="44dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/buttonlink"/>

        </LinearLayout>
        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="#CCCCCC" />
    </LinearLayout>
</FrameLayout>