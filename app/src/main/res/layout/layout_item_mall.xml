<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    android:layout_width="369dp"
    android:layout_height="97dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="match_parent"
        android:padding="12.5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="114dp"
            android:layout_height="72dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"

            app:cardPreventCornerOverlap="false">

            <ImageView
                android:id="@+id/ivMallImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/delipark" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="127dp"
            android:layout_height="72dp"
            android:paddingHorizontal="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMallName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delipark Mall"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvMallAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Jl. Putri Hijau No. 1\nKota Medan"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/nav" />

                <TextView
                    android:id="@+id/tvMallDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="4.7 km"
                    android:textColor="@color/black"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="99dp"
            android:layout_height="72dp"
            android:orientation="vertical"
            android:gravity="right">

            <TextView
                android:id="@+id/tvMallPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDR 5000/HR"
                android:textColor="#00D40B"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/btnParkHere"
                android:layout_width="68dp"
                android:layout_height="17dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/parkhere" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
